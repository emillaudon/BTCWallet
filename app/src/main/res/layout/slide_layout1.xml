<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="390dp"
    android:layout_height="580dp"
    android:layout_gravity="center|bottom"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/qr-imageview"
        android:tag="qr-imageview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="10dp"
        />

    <TextView
        android:id="@+id/textview-adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:text="bc1qcz7txdgnlla3zxcxdf2panhr9uzzyyf5nr2ek7"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/copy-button"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_content_copy_black_24dp"
        android:onClick="copyToClipBoard"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="18dp"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:layout_marginBottom="160dp"
        android:layout_centerHorizontal="true"
        android:text="Wallet Adress" />

    <TextView
        android:id="@+id/send-headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive"
        android:textSize="26dp"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:id="@+id/copy-textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_light_grey"
        />

</RelativeLayout>